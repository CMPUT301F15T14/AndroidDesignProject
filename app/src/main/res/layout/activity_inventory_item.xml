<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.t14.gametrader.InventoryItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inventory Item"
        android:id="@+id/inventoryItemText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryItemImage"
        android:layout_below="@+id/inventoryItemText"
        android:layout_alignParentStart="true"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:maxWidth="128dp"
        android:maxHeight="128dp"
        android:nestedScrollingEnabled="false"
        android:contentDescription="Game Image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Info:"
        android:id="@+id/gameInfoText"
        android:layout_below="@+id/inventoryItemText"
        android:layout_toEndOf="@+id/inventoryItemText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GameTitle"
        android:id="@+id/gameInfoTitle"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/gameInfoText"
        android:layout_alignEnd="@+id/gameInfoOwner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Console"
        android:id="@+id/gameInfoConsole"
        android:layout_below="@+id/gameInfoTitle"
        android:layout_alignStart="@+id/gameInfoTitle"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Condition"
        android:id="@+id/gameInfoCondition"
        android:layout_alignTop="@+id/gameConditionText"
        android:layout_alignStart="@+id/gameInfoOwner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Owner"
        android:id="@+id/gameInfoOwner"
        android:layout_below="@+id/gameInfoCondition"
        android:layout_toEndOf="@+id/inventoryItemImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Status"
        android:id="@+id/gameInfoStatus"
        android:layout_marginRight="27dp"
        android:layout_below="@+id/gameInfoOwner"
        android:layout_alignStart="@+id/gameInfoOwner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Condition:"
        android:id="@+id/gameConditionText"
        android:layout_below="@+id/inventoryItemImage"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Owner:"
        android:id="@+id/gameOwnerText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gameConditionText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status:"
        android:id="@+id/gameStatusText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gameOwnerText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact Information:"
        android:id="@+id/ContactInfoText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gameStatusText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone"
        android:id="@+id/contactPhone"
        android:layout_below="@+id/ContactInfoText"
        android:layout_alignStart="@+id/gameInfoStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:id="@+id/contactAddress"
        android:layout_below="@+id/contactPhone"
        android:layout_alignStart="@+id/contactPhone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Additional Info"
        android:id="@+id/additionalInfo"
        android:layout_below="@+id/contactAddressText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone:"
        android:id="@+id/contactPhoneText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ContactInfoText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address:"
        android:id="@+id/contactAddressText"
        android:layout_below="@+id/contactPhoneText"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
