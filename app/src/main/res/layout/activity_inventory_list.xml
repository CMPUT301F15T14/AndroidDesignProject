<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.t14.gametrader.InventoryListActivity"
    android:background="#2326d5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inventory List"
        android:id="@+id/inventoryListText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#3ddf2e" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryList"
        android:layout_below="@+id/newInventoryItem"
        android:layout_alignParentStart="true"
        android:background="#30605151"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Game to Inventory"
        android:id="@+id/newInventoryItem"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/inventoryList" />
</RelativeLayout>
