<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.t14.gametrader.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:textColor="@color/all_text"
        android:id="@+id/profileText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editProfile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/all_text"
        android:id="@+id/editProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Inventory"
        android:textColor="@color/all_text"
        android:id="@+id/viewInventory"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Contact Information   "
        android:textColor="@color/all_text"
        android:id="@+id/textView"
        android:layout_below="@+id/profileInfoName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone:"
        android:textColor="@color/all_text"
        android:id="@+id/profileInfoPhone"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email:"
        android:textColor="@color/all_text"
        android:id="@+id/profileInfoEmail"
        android:layout_below="@+id/profileInfoPhone"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address:"
        android:textColor="@color/all_text"
        android:id="@+id/profileInfoAddress"
        android:layout_below="@+id/profileInfoEmail"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Name:"
        android:textColor="@color/all_text"
        android:id="@+id/profileInfoName"
        android:layout_below="@+id/profileText"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Some text"
        android:textColor="@color/all_text"
        android:id="@+id/userNameDisplay"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Text"
        android:textColor="@color/all_text"
        android:id="@+id/phoneDisplay"
        android:phoneNumber="true"
        android:layout_above="@+id/emailDisplay"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Text"
        android:textColor="@color/all_text"
        android:id="@+id/emailDisplay"
        android:layout_above="@+id/addressDisplay"
        android:layout_alignStart="@+id/phoneDisplay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Text"
        android:textColor="@color/all_text"
        android:id="@+id/addressDisplay"
        android:layout_alignBottom="@+id/profileInfoAddress"
        android:layout_alignStart="@+id/emailDisplay" />

</RelativeLayout>
