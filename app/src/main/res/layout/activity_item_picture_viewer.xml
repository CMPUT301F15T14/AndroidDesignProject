<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bluebackground"
    tools:context=".InventoryItemPictureViewer"
    android:id="@+id/itemPictureViewer"
    android:focusableInTouchMode="false">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewPhotoScroller"
            android:gravity="top|fill_vertical|center_horizontal"
            android:dividerPadding="10dp">

        </LinearLayout>
    </ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/PictureViewerClose"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/horizontalScrollView"
        android:enabled="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
